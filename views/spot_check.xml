        <record model="ir.ui.view" id="spot_check_vault_search_view">
            <field name="name">spot_check.vault.search</field>
            <field name="model">spot_check.vault</field>
            <field name="arch" type="xml">
                <search>
                    <field name ="created_on"/>
                    <separator/>
                     <filter name="created_ons" string="Today" domain="[('created_on', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]" />
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="spot_check_teller_search_view">
            <field name="name">spot_check.teller.search</field>
            <field name="model">spot_check.teller</field>
            <field name="arch" type="xml">
                <search>
                    <field name ="created_on"/>
                    <separator/>
                     <filter name="created_ons" string="Today" domain="[('created_on', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]" />
                </search>
            </field>
        </record>

