                <search>
                    
                     <field name ="created_on"/>
                    <separator/>
                     <filter name="created_ons" string="Today" domain="[('created_on', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]" />
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="vault_list_action">
            <field name="name">Vault Spot Checks</field>
            <field name="res_model">spot_check.vault</field>
            <field name="view_mode">tree,form</field>
            <field name ="context">{"search_default_created_ons":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Vault Spot Checks</p>
            </field>
        </record>

          <record model="ir.actions.act_window" id="teller_list_action">
            <field name="name">Teller Spot Checks</field>
            <field name="res_model">spot_check.teller</field>
            <field name="view_mode">tree,form</field>
            <field name ="context">{"search_default_created_ons":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Teller Declarations</p>
            </field>
        </record>

         <record model="ir.actions.act_window" id="atm_list_action">
            <field name="name">ATM Spot Checks</field>
            <field name="res_model">spot_check.atm</field>
            <field name="view_mode">tree,form</field>
            <field name ="context">{"search_default_created_ons":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">ATM Spot Check</p>
            </field>
        </record>

        <menuitem id="main_spot_check_menu" name="Online Spot Check"/>
        <menuitem id="vault_request" name="Spot Checks" sequence="1" parent="main_spot_check_menu"/>
        <menuitem id="vault_spot__checkes" name="Vault Spot Checks" sequence="2" parent="vault_request" action="vault_list_action"/>  
        <menuitem id="atm_spot__checkes" name="ATM Spot Checks" sequence="3" parent="vault_request" action="atm_list_action"/>   
        <menuitem id="teller_spot__checkes" name="Teller Declarations" sequence="3" parent="vault_request" action="teller_list_action"/>    
</odoo>